<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MusicPlatform.Maui.ViewModels"
             x:Class="MusicPlatform.Maui.Pages.AudioFileDetailPage"
             x:DataType="viewmodels:AudioFileDetailViewModel"
             Title="{Binding DisplayTitle}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header with Album Artwork -->
        <Grid Grid.Row="0" HeightRequest="250">
            <!-- Background artwork -->
            <Image Source="{Binding AlbumArtworkUri}"
                   Aspect="AspectFill"
                   IsVisible="{Binding HasAlbumArtwork}"
                   Opacity="0.3" />
            
            <!-- Semi-transparent overlay -->
            <BoxView Color="Black"
                     Opacity="0.5"
                     IsVisible="{Binding HasAlbumArtwork}" />
            
            <!-- Content -->
            <Grid ColumnDefinitions="Auto,*" 
                  Padding="20"
                  VerticalOptions="Center"
                  ColumnSpacing="20">
                
                <!-- Album artwork thumbnail -->
                <Frame Grid.Column="0"
                       CornerRadius="15"
                       Padding="0"
                       HeightRequest="150"
                       WidthRequest="150"
                       IsClippedToBounds="True"
                       HasShadow="True"
                       IsVisible="{Binding HasAlbumArtwork}">
                    <Image Source="{Binding AlbumArtworkUri}"
                           Aspect="AspectFill" />
                </Frame>
                
                <!-- Track metadata -->
                <VerticalStackLayout Grid.Column="1" 
                                     Spacing="8" 
                                     VerticalOptions="Center">
                    <Label Text="{Binding DisplayTitle}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                    <Label Text="{Binding DisplayArtist}"
                           FontSize="18"
                           TextColor="White"
                           Opacity="0.9"
                           LineBreakMode="WordWrap" />
                    <Label Text="{Binding DisplayAlbum}"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.7"
                           LineBreakMode="WordWrap"
                           IsVisible="{Binding DisplayAlbum, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                    
                    <!-- Technical info -->
                    <HorizontalStackLayout Spacing="15" Margin="0,5,0,0">
                        <Label TextColor="White" Opacity="0.8">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="🎵 " />
                                    <Span Text="{Binding Format}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label TextColor="White" Opacity="0.8">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="⏱️ " />
                                    <Span Text="{Binding DurationFormatted}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label TextColor="White" Opacity="0.8" IsVisible="{Binding HasBitrate}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="📊 " />
                                    <Span Text="{Binding Bitrate}" />
                                    <Span Text=" kbps" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">
                
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding ShowStemsLoading}"
                                  IsVisible="{Binding ShowStemsLoading}"
                                  Color="{StaticResource Primary}"
                                  HeightRequest="40" />

                <!-- Source Material Card -->
                <Frame BorderColor="{StaticResource Primary}"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="🎵 Source Material"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />
                        
                        <!-- Song Description -->
                        <Label FontSize="14"
                               TextColor="{StaticResource Gray900}"
                               LineBreakMode="WordWrap">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding DisplayTitle}" FontAttributes="Bold" />
                                    <Span Text=" by " />
                                    <Span Text="{Binding DisplayArtist}" FontAttributes="Bold" />
                                    <Span Text=" from the album " />
                                    <Span Text="{Binding DisplayAlbum}" FontAttributes="Italic" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        
                        <!-- Musical metadata grid -->
                        <Grid ColumnDefinitions="Auto,*" 
                              RowDefinitions="Auto,Auto,Auto"
                              ColumnSpacing="10" 
                              RowSpacing="8"
                              IsVisible="{Binding HasAnalysis}">
                            
                            <Label Grid.Row="0" Grid.Column="0" Text="Key:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Key}" FontSize="13" />
                            
                            <Label Grid.Row="1" Grid.Column="0" Text="Tempo:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="1" Grid.Column="1" FontSize="13">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Bpm}" />
                                        <Span Text=" BPM" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            
                            <Label Grid.Row="2" Grid.Column="0" Text="Time Signature:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding TimeSignature}" FontSize="13" />
                        </Grid>
                        
                        <!-- Chord Progression (if available) -->
                        <Frame BorderColor="#9B59B6"
                               CornerRadius="8"
                               Padding="12"
                               BackgroundColor="#F8F5FB"
                               IsVisible="{Binding HasChordProgression}"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="🎵 Chord Progression"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#9B59B6" />
                                <Label Text="{Binding ChordProgressionSummary}"
                                       FontSize="12"
                                       TextColor="#5A3370"
                                       LineBreakMode="WordWrap" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Analysis pending message -->
                        <Label Text="⏳ Musical analysis pending..."
                               FontSize="13"
                               FontAttributes="Italic"
                               TextColor="{StaticResource Gray600}"
                               IsVisible="{Binding HasAnalysis, Converter={StaticResource InvertedBoolConverter}}"
                               Margin="0,5,0,0" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Musical Analysis Section (Detailed) -->
                <!-- Musical Analysis Section (Detailed) -->
                <Frame BorderColor="{StaticResource Primary}"
                       CornerRadius="15"
                       Padding="20"
                       IsVisible="{Binding HasAnalysis}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="📊 Technical Analysis"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <Grid ColumnDefinitions="Auto,*,Auto,*" 
                              RowDefinitions="Auto,Auto"
                              ColumnSpacing="15" 
                              RowSpacing="10">
                            
                            <Label Grid.Row="0" Grid.Column="0" Text="Sample Rate:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding SampleRate}" FontSize="13" />
                            
                            <Label Grid.Row="0" Grid.Column="2" Text="Channels:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="0" Grid.Column="3" Text="{Binding Channels}" FontSize="13" />
                            
                            <Label Grid.Row="1" Grid.Column="0" Text="�️ Tuning:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Tuning}" FontSize="13" />
                            
                            <Label Grid.Row="1" Grid.Column="2" Text="Format:" FontAttributes="Bold" FontSize="13" />
                            <Label Grid.Row="1" Grid.Column="3" Text="{Binding Format}" FontSize="13" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Stems Section -->
                <Frame BorderColor="{StaticResource Primary}"
                       CornerRadius="15"
                       Padding="20"
                       IsVisible="{Binding ShowStemsList}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="FillAndExpand">
                        <Label Text="🎸 Extracted Stems"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand" />
                        
                        <!-- Selection Controls -->
                        <HorizontalStackLayout Spacing="10">
                            <Button Text="☑"
                                    Command="{Binding ToggleStemSelectionModeCommand}"
                                    FontSize="20"
                                    BackgroundColor="{Binding IsStemSelectionMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4CAF50|#666666'}"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="45"
                                    HeightRequest="45"
                                    Padding="0"
                                    ToolTipProperties.Text="Toggle Selection Mode" />
                            
                            <Button Text="🎸 Add to Selection"
                                    Command="{Binding GenerateFromSelectedStemsCommand}"
                                    IsVisible="{Binding IsStemSelectionMode}"
                                    IsEnabled="{Binding HasSelectedStems}"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CornerRadius="20"
                                    Padding="15,10"
                                    FontSize="14"
                                    FontAttributes="Bold" />
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>
                    
                    <Label Text="Select multiple stems from different audio files to generate original music"
                           FontSize="12"
                           TextColor="{StaticResource Gray600}"
                           IsVisible="{Binding IsStemSelectionMode}"
                           Margin="0,5,0,0" />                        <!-- Use CollectionView with fixed height -->
                        <CollectionView ItemsSource="{Binding Stems}"
                                       HeightRequest="800">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:StemDetailItemViewModel">
                                    <Frame BorderColor="Cyan"
                                           BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#2a4a2a|#1a1a1a'}"
                                           CornerRadius="10"
                                           Padding="15"
                                           Margin="0,5"
                                           HasShadow="False">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                            
                                            <!-- Selection Checkbox -->
                                            <CheckBox Grid.Row="0" Grid.Column="0"
                                                     IsChecked="{Binding IsSelected}"
                                                     IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AudioFileDetailViewModel}}, Path=IsStemSelectionMode}"
                                                     Color="Lime"
                                                     VerticalOptions="Center"
                                                     Margin="0,0,10,0" />
                                            
                                            <!-- Stem type and info -->
                                            <Label Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding StemType}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="Cyan" />
                                            
                                            <!-- Play button -->
                                            <Button Grid.Row="0" Grid.Column="2"
                                                   Text="▶️"
                                                   Command="{Binding PlayCommand}"
                                                   BackgroundColor="Lime"
                                                   TextColor="Black"
                                                   CornerRadius="20"
                                                   WidthRequest="50"
                                                   HeightRequest="40" />
                                            
                                            <!-- Technical details -->
                                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                                                  Spacing="15"
                                                                  Margin="0,10,0,0">
                                                <Label FontSize="12" TextColor="White">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="⏱️ " />
                                                            <Span Text="{Binding Duration}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label FontSize="12" TextColor="White">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="📏 " />
                                                            <Span Text="{Binding FileSizeFormatted}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </HorizontalStackLayout>
                                            
                                            <!-- Notation preview (if available) -->
                                            <Frame Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                                   BorderColor="Yellow"
                                                   CornerRadius="8"
                                                   Padding="10"
                                                   Margin="0,10,0,0"
                                                   BackgroundColor="#2a2a2a"
                                                   IsVisible="{Binding HasNotation}"
                                                   HasShadow="False">
                                                <VerticalStackLayout Spacing="5">
                                                    <Label Text="📝 Instrument Notation"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="Yellow" />
                                                    <Label Text="{Binding NotationPreview}"
                                                           FontSize="12"
                                                           FontFamily="Courier New"
                                                           TextColor="White"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="5" />
                                                    <Button Text="View Full Notation"
                                                           Command="{Binding ViewNotationCommand}"
                                                           FontSize="12"
                                                           BackgroundColor="Yellow"
                                                           TextColor="Black"
                                                           CornerRadius="5"
                                                           Padding="10,5"
                                                           HorizontalOptions="Start"
                                                           Margin="0,5,0,0" />
                                                </VerticalStackLayout>
                                            </Frame>
                                            
                                            <!-- Status message -->
                                            <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                                   Text="{Binding StatusMessage}"
                                                   FontSize="12"
                                                   TextColor="Orange"
                                                   Margin="0,5,0,0"
                                                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- No stems message -->
                <Frame BorderColor="{StaticResource Gray300}"
                       CornerRadius="15"
                       Padding="20"
                       IsVisible="{Binding ShowNoStemsMessage}"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="🎸"
                               FontSize="48"
                               HorizontalOptions="Center" />
                        <Label Text="No stems extracted yet"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                        <Label Text="This audio file hasn't been analyzed and separated into stems."
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
