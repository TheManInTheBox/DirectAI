<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MusicPlatform.Maui.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MusicPlatform.Maui.Pages.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Music Platform">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="20">
            
            <!-- App Header -->
            <VerticalStackLayout Spacing="5">
                <Label Text="ðŸŽµ DirectML Music Platform"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <Label Text="AI-Powered Music Analysis and Generation"
                       FontSize="14"
                       TextColor="{StaticResource Gray600}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
            
            <!-- Selected Stems Indicator (Shopping Cart) -->
            <Border StrokeThickness="2"
                   Stroke="{StaticResource Primary}"
                   BackgroundColor="#E3F2FD"
                   Padding="20"
                   Margin="0,10"
                   IsVisible="{Binding HasGlobalSelectedStems}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                    <Label Grid.Column="0"
                           Text="ðŸ›’"
                           FontSize="32"
                           VerticalOptions="Center" />
                    
                    <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                        <Label Text="{Binding GlobalSelectedStemsCount, StringFormat='{0} Stem(s) Selected for Generation'}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />
                        <Label Text="Select stems from different audio files, then generate original music"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="2"
                           Text="Generate Now ðŸŽ¸"
                           Command="{Binding NavigateToGenerationCommand}"
                           BackgroundColor="{StaticResource Primary}"
                           TextColor="White"
                           CornerRadius="20"
                           Padding="20,10"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </Grid>
            </Border>

            <!-- Drag and Drop Upload Zone -->
            <Border x:Name="DropZone"
                    Stroke="{StaticResource Primary}"
                    StrokeThickness="2"
                    Padding="40"
                    BackgroundColor="{StaticResource PrimaryLight}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <DropGestureRecognizer AllowDrop="True"
                                          Drop="OnDrop"
                                          DragOver="OnDragOver"
                                          DragLeave="OnDragLeave" />
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ“‚"
                           FontSize="60"
                           HorizontalOptions="Center" />
                    
                    <Label Text="Drop MP3 Files Here"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}" />
                    
                    <Label Text="or click to browse"
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"
                           HorizontalOptions="Center" />

                    <Button Text="Select Files"
                            Command="{Binding SelectFilesCommand}"
                            IsEnabled="{Binding IsUploading, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="20"
                            Padding="30,15"
                            HorizontalOptions="Center" />

                    <!-- Upload Progress -->
                    <VerticalStackLayout Spacing="10" IsVisible="{Binding IsUploading}">
                        <ActivityIndicator IsRunning="{Binding IsUploading}"
                                         Color="{StaticResource Primary}"
                                         HeightRequest="30" />
                        <Label Text="{Binding UploadStatus}"
                               FontSize="12"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>

                    <!-- Upload Status -->
                    <Label Text="{Binding UploadStatus}"
                           IsVisible="{Binding UploadStatus, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                           FontSize="14"
                           HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Success}" />
                </VerticalStackLayout>
            </Border>            <!-- Source Material Library -->
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                    <Label Text="ðŸ“ Source Material Library"
                           FontSize="22"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="StartAndExpand" />
                    
                    <!-- DEBUG: Show count -->
                    <Label Text="{Binding SourceMaterialLibrary.Count, StringFormat='({0} items)'}"
                           FontSize="14"
                           VerticalOptions="Center"
                           TextColor="Red"
                           FontAttributes="Bold" />
                    
                    <Button Text="â˜‘"
                            Command="{Binding ToggleSelectionModeCommand}"
                            FontSize="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="0"
                            BackgroundColor="{Binding IsSelectionMode, Converter={StaticResource BoolToColorConverter}}"
                            ToolTipProperties.Text="Toggle Selection Mode" />
                    
                    <Button Text="âŸ³"
                            Command="{Binding RefreshSourceLibraryCommand}"
                            FontSize="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="0"
                            BackgroundColor="{StaticResource Secondary}" />
                    
                    <Button Text="ðŸ“‹"
                            Command="{Binding NavigateToJobsCommand}"
                            FontSize="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="0"
                            BackgroundColor="{StaticResource Primary}"
                            ToolTipProperties.Text="View Background Jobs" />
                </HorizontalStackLayout>

                <!-- Selection Mode Controls -->
                <HorizontalStackLayout Spacing="10" IsVisible="{Binding IsSelectionMode}">
                    <Button Text="Select All"
                            Command="{Binding SelectAllCommand}"
                            FontSize="12"
                            Padding="15,8"
                            CornerRadius="15"
                            BackgroundColor="{StaticResource Primary}" />
                    
                    <Button Text="Deselect All"
                            Command="{Binding DeselectAllCommand}"
                            FontSize="12"
                            Padding="15,8"
                            CornerRadius="15"
                            BackgroundColor="{StaticResource Secondary}" />
                    
                    <Label Text="{Binding SelectedItemsCount, StringFormat='{0} selected'}"
                           FontSize="14"
                           VerticalOptions="Center"
                           Margin="10,0,0,0"
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold" />
                    
                    <Button Text="ðŸŽ¸ Generate from Selected"
                            Command="{Binding GenerateFromSelectedCommand}"
                            FontSize="14"
                            FontAttributes="Bold"
                            Padding="20,10"
                            CornerRadius="15"
                            BackgroundColor="{StaticResource Success}"
                            TextColor="White"
                            HorizontalOptions="EndAndExpand" />
                </HorizontalStackLayout>

                <ActivityIndicator IsRunning="{Binding IsLoadingSourceLibrary}"
                                 IsVisible="{Binding IsLoadingSourceLibrary}"
                                 Color="{StaticResource Primary}"
                                 HeightRequest="30" />

                <!-- Carousel of Source Materials -->
                <ScrollView Orientation="Horizontal" HeightRequest="250">
                    <HorizontalStackLayout Spacing="15" Padding="5">
                        <CollectionView ItemsSource="{Binding SourceMaterialLibrary}"
                                      ItemsLayout="HorizontalList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:SourceMaterialItem">
                                    <Frame BorderColor="Transparent"
                                           CornerRadius="20"
                                           Padding="0"
                                           Margin="10,5"
                                           WidthRequest="320"
                                           HasShadow="True"
                                           IsClippedToBounds="True"
                                           BackgroundColor="White">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ViewDetailsCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                        
                                        <Grid HeightRequest="280" WidthRequest="320">
                                            <!-- Album Artwork Background -->
                                            <Image Source="{Binding AlbumArtworkUri, Converter={StaticResource HttpImageSourceConverter}}"
                                                   Aspect="AspectFill"
                                                   HeightRequest="280"
                                                   WidthRequest="320"
                                                   IsVisible="{Binding HasAlbumArtwork}" />
                                            
                                            <!-- Fallback gradient background for files without artwork -->
                                            <BoxView IsVisible="{Binding HasAlbumArtwork, Converter={StaticResource InvertedBoolConverter}}">
                                                <BoxView.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#667eea" Offset="0.0" />
                                                        <GradientStop Color="#764ba2" Offset="1.0" />
                                                    </LinearGradientBrush>
                                                </BoxView.Background>
                                            </BoxView>
                                            
                                            <!-- Gradient Overlay for readability -->
                                            <BoxView>
                                                <BoxView.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#00000000" Offset="0.0" />
                                                        <GradientStop Color="#AA000000" Offset="0.5" />
                                                        <GradientStop Color="#DD000000" Offset="1.0" />
                                                    </LinearGradientBrush>
                                                </BoxView.Background>
                                            </BoxView>
                                            
                                            <!-- Content -->
                                            <Grid RowDefinitions="Auto,*,Auto" Padding="20">
                                                <!-- Top Row: Checkbox and Status Badge -->
                                                <HorizontalStackLayout Grid.Row="0" 
                                                                     HorizontalOptions="FillAndExpand"
                                                                     VerticalOptions="Start">
                                                    <!-- Selection Checkbox -->
                                                    <CheckBox IsChecked="{Binding IsSelected}"
                                                             IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=IsSelectionMode}"
                                                             IsEnabled="{Binding IsAnalyzed}"
                                                             Color="White"
                                                             HorizontalOptions="Start" />
                                                    
                                                    <!-- Status Badge -->
                                                    <Border BackgroundColor="#22FFFFFF"
                                                           StrokeThickness="1"
                                                           Stroke="#44FFFFFF"
                                                           Padding="12,6"
                                                           IsVisible="{Binding IsAnalyzed}"
                                                           HorizontalOptions="End">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="12" />
                                                        </Border.StrokeShape>
                                                        <Label Text="âœ“ Analyzed"
                                                               FontSize="11"
                                                               FontAttributes="Bold"
                                                               TextColor="White" />
                                                    </Border>
                                                </HorizontalStackLayout>
                                                
                                                <!-- Middle Row: Icon -->
                                                <VerticalStackLayout Grid.Row="1" 
                                                                   VerticalOptions="Center"
                                                                   HorizontalOptions="Center"
                                                                   Spacing="0">
                                                    <Label Text="ðŸŽµ"
                                                           FontSize="64"
                                                           HorizontalOptions="Center"
                                                           Opacity="0.9" />
                                                </VerticalStackLayout>
                                                
                                                <!-- Bottom Row: File Info -->
                                                <VerticalStackLayout Grid.Row="2" 
                                                                   Spacing="8"
                                                                   VerticalOptions="End">
                                                    <!-- File Name -->
                                                    <Label Text="{Binding FileName}"
                                                           FontSize="18"
                                                           FontAttributes="Bold"
                                                           LineBreakMode="TailTruncation"
                                                           MaxLines="2"
                                                           TextColor="White"
                                                           HorizontalTextAlignment="Start" />
                                                    
                                                    <!-- File Info -->
                                                    <Label Text="{Binding DisplayInfo}"
                                                           FontSize="13"
                                                           TextColor="#DDDDDD"
                                                           LineBreakMode="TailTruncation"
                                                           HorizontalTextAlignment="Start" />
                                                </VerticalStackLayout>
                                            </Grid>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Empty State -->
                <Frame BorderColor="{StaticResource Gray200}"
                       CornerRadius="10"
                       Padding="30"
                       IsVisible="{Binding SourceMaterialLibrary.Count, Converter={StaticResource IsZeroConverter}}"
                       BackgroundColor="{StaticResource Gray100}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="No source materials yet"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}" />
                        <Label Text="Upload MP3 files above to get started"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Generated Music Library -->
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                    <Label Text="âœ¨ Generated Music Library"
                           FontSize="22"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="StartAndExpand" />
                    
                    <Button Text="âŸ³"
                            Command="{Binding RefreshGeneratedLibraryCommand}"
                            FontSize="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="0"
                            BackgroundColor="{StaticResource Secondary}" />
                </HorizontalStackLayout>

                <ActivityIndicator IsRunning="{Binding IsLoadingGeneratedLibrary}"
                                 IsVisible="{Binding IsLoadingGeneratedLibrary}"
                                 Color="{StaticResource Primary}"
                                 HeightRequest="30" />

                <!-- Carousel of Generated Music -->
                <ScrollView Orientation="Horizontal" HeightRequest="220">
                    <HorizontalStackLayout Spacing="15" Padding="5">
                        <CollectionView ItemsSource="{Binding GeneratedMusicLibrary}"
                                      ItemsLayout="HorizontalList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:GeneratedMusicItem">
                                    <Frame BorderColor="#333333"
                                           CornerRadius="12"
                                           Padding="0"
                                           Margin="5"
                                           WidthRequest="320"
                                           HasShadow="True"
                                           BackgroundColor="#1a1a1a">
                                        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
                                            <!-- Audio Player (Hidden, for playback) -->
                                            <toolkit:MediaElement Grid.Row="0"
                                                                 ShouldAutoPlay="False"
                                                                 ShouldShowPlaybackControls="False"
                                                                 IsVisible="False"
                                                                 BindingContext="{Binding .}"
                                                                 Loaded="OnMediaElementLoaded" />

                                            <!-- Header with Icon and Controls -->
                                            <HorizontalStackLayout Grid.Row="0" 
                                                                 Spacing="15"
                                                                 Padding="15,10">
                                                <!-- Stem Type Icon -->
                                                <Border BackgroundColor="#1a1a1a"
                                                       WidthRequest="50"
                                                       HeightRequest="50"
                                                       StrokeThickness="0"
                                                       VerticalOptions="Center">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="8" />
                                                    </Border.StrokeShape>
                                                    <Label Text="ðŸŽµ"
                                                          FontSize="24"
                                                          HorizontalOptions="Center"
                                                          VerticalOptions="Center" />
                                                </Border>

                                                <!-- Info and Controls -->
                                                <VerticalStackLayout Spacing="5" 
                                                                   VerticalOptions="Center"
                                                                   HorizontalOptions="FillAndExpand">
                                                    <Label Text="{Binding StemType}"
                                                          FontSize="16"
                                                          FontAttributes="Bold"
                                                          TextColor="White" />
                                                    <Label Text="{Binding DisplayInfo}"
                                                          FontSize="11"
                                                          TextColor="#999999" />
                                                </VerticalStackLayout>

                                                <!-- Playback Control Button -->
                                                <Button Text="{Binding PlayPauseIcon}"
                                                       Command="{Binding PlayCommand}"
                                                       IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                                       BackgroundColor="Transparent"
                                                       TextColor="White"
                                                       FontSize="20"
                                                       WidthRequest="40"
                                                       HeightRequest="40"
                                                       CornerRadius="20"
                                                       Padding="0"
                                                       BorderWidth="1"
                                                       BorderColor="#444444"
                                                       VerticalOptions="Center" />
                                            </HorizontalStackLayout>

                                            <!-- Waveform Visualization Area -->
                                            <Border Grid.Row="1"
                                                   BackgroundColor="{Binding StemColor}"
                                                   HeightRequest="80"
                                                   Margin="0"
                                                   StrokeThickness="0">
                                                <Grid>
                                                    <!-- Simulated Waveform -->
                                                    <HorizontalStackLayout Spacing="2" 
                                                                         HorizontalOptions="FillAndExpand"
                                                                         VerticalOptions="Center"
                                                                         Padding="10,0">
                                                        <!-- Generate waveform bars -->
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="20" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="35" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="50" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="40" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="25" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="45" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="60" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="35" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="30" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="50" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="40" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="55" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="35" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="30" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="45" VerticalOptions="Center" />
                                                        <BoxView Color="#00000033" WidthRequest="3" HeightRequest="25" VerticalOptions="Center" />
                                                    </HorizontalStackLayout>

                                                    <!-- Playback Position Overlay -->
                                                    <Label Text="{Binding CurrentPositionFormatted}"
                                                          FontSize="12"
                                                          FontAttributes="Bold"
                                                          TextColor="#000000"
                                                          BackgroundColor="#FFFFFF88"
                                                          Padding="8,4"
                                                          HorizontalOptions="End"
                                                          VerticalOptions="Start"
                                                          Margin="10"
                                                          IsVisible="{Binding CurrentPosition, Converter={StaticResource IsNotZeroConverter}}">
                                                        <Label.Shadow>
                                                            <Shadow Brush="Black" Opacity="0.3" Radius="4" Offset="0,2" />
                                                        </Label.Shadow>
                                                    </Label>

                                                    <!-- Loading Indicator -->
                                                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                                                     IsVisible="{Binding IsLoading}"
                                                                     Color="White"
                                                                     WidthRequest="30"
                                                                     HeightRequest="30"
                                                                     HorizontalOptions="Center"
                                                                     VerticalOptions="Center" />
                                                </Grid>
                                            </Border>

                                            <!-- Bottom Controls -->
                                            <HorizontalStackLayout Grid.Row="2" 
                                                                 Spacing="10"
                                                                 Padding="15,10"
                                                                 HorizontalOptions="FillAndExpand">
                                                <!-- Download Button -->
                                                <Button Text="â¬‡"
                                                       Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DownloadStemCommand}"
                                                       CommandParameter="{Binding .}"
                                                       IsEnabled="{Binding IsDownloading, Converter={StaticResource InvertedBoolConverter}}"
                                                       BackgroundColor="Transparent"
                                                       TextColor="White"
                                                       FontSize="18"
                                                       WidthRequest="40"
                                                       HeightRequest="40"
                                                       CornerRadius="20"
                                                       Padding="0"
                                                       BorderWidth="1"
                                                       BorderColor="#444444"
                                                       HorizontalOptions="Start" />

                                                <!-- Status Message -->
                                                <HorizontalStackLayout Spacing="5" 
                                                                     VerticalOptions="Center"
                                                                     HorizontalOptions="FillAndExpand"
                                                                     IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                                                    <ActivityIndicator IsRunning="{Binding IsDownloading}"
                                                                     IsVisible="{Binding IsDownloading}"
                                                                     WidthRequest="15"
                                                                     HeightRequest="15"
                                                                     Color="White" />
                                                    <Label Text="{Binding StatusMessage}"
                                                          FontSize="11"
                                                          TextColor="#999999"
                                                          VerticalOptions="Center" />
                                                </HorizontalStackLayout>

                                                <!-- Stop Button -->
                                                <Button Text="â¹"
                                                       Command="{Binding StopCommand}"
                                                       BackgroundColor="Transparent"
                                                       TextColor="White"
                                                       FontSize="16"
                                                       WidthRequest="40"
                                                       HeightRequest="40"
                                                       CornerRadius="20"
                                                       Padding="0"
                                                       BorderWidth="1"
                                                       BorderColor="#444444"
                                                       HorizontalOptions="End" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Empty State -->
                <Frame BorderColor="{StaticResource Gray200}"
                       CornerRadius="10"
                       Padding="30"
                       IsVisible="{Binding GeneratedMusicLibrary.Count, Converter={StaticResource IsZeroConverter}}"
                       BackgroundColor="{StaticResource Gray100}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="No generated music yet"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}" />
                        <Label Text="Analyze source materials and generate stems to see them here"
                               FontSize="14"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
