<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MusicPlatform.Maui.ViewModels"
             x:Class="MusicPlatform.Maui.Pages.GenerationPage"
             x:DataType="viewmodels:GenerationViewModel"
             Title="Generate Stems">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="ðŸŽ¸ Generate Original Music"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Create new stems using selected references from multiple sources"
                   FontSize="14"
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
                   
            <!-- Workflow Instructions -->
            <Border StrokeThickness="2"
                   Stroke="#FFC107"
                   BackgroundColor="#FFF9C4"
                   Padding="15"
                   Margin="0,10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ’¡ Multi-Source Generation Workflow"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#F57F17" />
                    <Label FontSize="12" TextColor="#795548">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="1ï¸âƒ£ Select reference stems below (or add more from Audio Detail pages)&#x0a;" />
                                <Span Text="2ï¸âƒ£ Configure musical parameters (Key, BPM, style)&#x0a;" />
                                <Span Text="3ï¸âƒ£ Choose which new stem types to generate&#x0a;" />
                                <Span Text="4ï¸âƒ£ Click Generate to create original music combining all references" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>

            <!-- Reference Stems Selection -->
            <Frame BorderColor="{StaticResource Primary}"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="FillAndExpand">
                        <Label Text="ðŸŽµ Reference Stems (Multi-Select)"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand" />
                        
                        <Button Text="Clear All"
                                Command="{Binding ClearReferenceStemsCommand}"
                                FontSize="12"
                                BackgroundColor="{StaticResource Gray400}"
                                TextColor="White"
                                CornerRadius="15"
                                Padding="15,8"
                                VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Label Text="Selected stems from multiple audio files"
                           FontSize="12"
                           TextColor="{StaticResource Gray600}"
                           Margin="0,0,0,10" />

                    <CollectionView ItemsSource="{Binding ReferenceStems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:ReferenceStemOption">
                                <Border StrokeThickness="1"
                                       Stroke="{StaticResource Gray200}"
                                       BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E8F5E9|Transparent'}"
                                       Padding="10"
                                       Margin="0,5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <HorizontalStackLayout Spacing="15">
                                        <CheckBox IsChecked="{Binding IsSelected}" 
                                                 Color="{StaticResource Primary}" />
                                        <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                            <Label Text="{Binding Name}" 
                                                   FontSize="16"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Info}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray600}" />
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Musical Context Summary -->
            <Border StrokeThickness="2"
                   Stroke="#4CAF50"
                   BackgroundColor="#E8F5E9"
                   Padding="15"
                   Margin="0,10"
                   IsVisible="{Binding HasReferenceStems}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="ðŸŽ¼"
                               FontSize="24"
                               VerticalOptions="Center" />
                        <Label Text="Realistic Generation Mode"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#2E7D32"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Label FontSize="12" TextColor="#1B5E20" LineHeight="1.4">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="âœ“ Musical notation and patterns extracted&#x0a;" />
                                <Span Text="âœ“ Chord progressions analyzed&#x0a;" />
                                <Span Text="âœ“ Rhythmic structure mapped&#x0a;" />
                                <Span Text="âœ“ Spectral features captured&#x0a;" />
                                <Span Text="âœ“ Harmonic relationships preserved&#x0a;&#x0a;" />
                                <Span Text="The AI will create new stems that musically complement your references while maintaining realistic instrumentation and coherent harmonic structure."
                                      FontAttributes="Italic" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>

            <!-- Stem Selection -->
            <Frame BorderColor="{StaticResource Primary}"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸŽ¸ Stems to Generate"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <CollectionView ItemsSource="{Binding AvailableStems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:StemOption">
                                <HorizontalStackLayout Spacing="10" Padding="5">
                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                             Color="{StaticResource Primary}" />
                                    <Label Text="{Binding Name}" 
                                           FontSize="16"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Parameters -->
            <Frame BorderColor="{StaticResource Primary}"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="âš™ï¸ Generation Parameters"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Musical Key -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Musical Key:" FontAttributes="Bold" />
                        <Picker ItemsSource="{Binding AvailableKeys}"
                               SelectedItem="{Binding TargetKey}"
                               FontSize="16" />
                    </VerticalStackLayout>

                    <!-- BPM -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TargetBpm, StringFormat='Target BPM: {0:F0}'}" 
                               FontAttributes="Bold" />
                        <Slider Minimum="60" 
                               Maximum="200" 
                               Value="{Binding TargetBpm}"
                               MinimumTrackColor="{StaticResource Primary}" />
                    </VerticalStackLayout>

              <!-- Time Signature -->
              <VerticalStackLayout Spacing="5">
               <Label Text="Time Signature:" FontAttributes="Bold" />
               <Picker ItemsSource="{Binding AvailableTimeSignatures}"
                    SelectedItem="{Binding TimeSignature}"
                    FontSize="16" />
              </VerticalStackLayout>

              <!-- Song Section Type -->
              <VerticalStackLayout Spacing="5">
               <Label Text="Song Section:" FontAttributes="Bold" />
               <Picker ItemsSource="{Binding AvailableSectionTypes}"
                    SelectedItem="{Binding SectionType}"
                    FontSize="16" />
              </VerticalStackLayout>

                    <!-- Duration -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding DurationSeconds, StringFormat='Duration: {0:F0} seconds'}" 
                               FontAttributes="Bold" />
               <Slider Minimum="5" 
                   Maximum="60" 
                               Value="{Binding DurationSeconds}"
                               MinimumTrackColor="{StaticResource Primary}" />
                        <Label Text="Longer durations require more processing time"
                               FontSize="11"
                               TextColor="{StaticResource Gray600}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>

                    <!-- Style -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Style:" FontAttributes="Bold" />
                        <Picker ItemsSource="{Binding AvailableStyles}"
                               SelectedItem="{Binding Style}"
                               FontSize="16" />
                    </VerticalStackLayout>

                    <!-- Prompt -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Prompt (optional):" FontAttributes="Bold" />
                        <Editor Text="{Binding Prompt}"
                               Placeholder="Describe the musical style or mood..."
                               HeightRequest="80"
                               FontSize="14" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Generate Button -->
            <Button Text="Generate AI Stems"
                    Command="{Binding GenerateCommand}"
                    IsEnabled="{Binding CanGenerate}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50" />

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsGenerating}"
                              IsVisible="{Binding IsGenerating}"
                              Color="{StaticResource Primary}"
                              HeightRequest="40" />

            <!-- Status Message -->
            <Frame BorderColor="{StaticResource Gray200}"
                   CornerRadius="10"
                   Padding="15"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <Label Text="{Binding StatusMessage}"
                       FontSize="14"
                       LineBreakMode="WordWrap" />
            </Frame>

            <!-- Generation Result -->
            <Frame BorderColor="{StaticResource Success}"
                   CornerRadius="10"
                   Padding="20"
                   IsVisible="{Binding GenerationRequest, Converter={StaticResource IsNotNullConverter}}"
                   BackgroundColor="{StaticResource SuccessLight}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="âœ“ Generation Request Created"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Success}" />
                    
                    <Label Text="The AI is now generating your stems. This typically takes 1-3 minutes per stem."
                           FontSize="14"
                           LineBreakMode="WordWrap" />

                    <Button Text="View Generated Stems"
                            Command="{Binding ViewStemsCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
