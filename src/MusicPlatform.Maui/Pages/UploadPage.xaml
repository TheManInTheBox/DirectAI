<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MusicPlatform.Maui.ViewModels"
             x:Class="MusicPlatform.Maui.Pages.UploadPage"
             x:DataType="viewmodels:UploadViewModel"
             Title="Upload Audio">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="Upload MP3 File"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Select an MP3 file to analyze and generate stems from"
                   FontSize="14"
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- File Selection -->
            <Frame BorderColor="{StaticResource Primary}"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Select MP3 File"
                            Command="{Binding SelectFileCommand}"
                            IsEnabled="{Binding IsUploading, Converter={StaticResource InvertedBoolConverter}}"
                            HorizontalOptions="Center" />

                    <Label Text="{Binding SelectedFileName}"
                           IsVisible="{Binding SelectedFileName, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Upload Button -->
            <Button Text="Upload and Analyze"
                    Command="{Binding UploadFileCommand}"
                    IsEnabled="{Binding CanUpload}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50" />

            <!-- Upload Progress -->
            <ProgressBar Progress="{Binding UploadProgress, Converter={StaticResource PercentToProgressConverter}}"
                         IsVisible="{Binding IsUploading}"
                         ProgressColor="{StaticResource Primary}"
                         HeightRequest="10" />

            <!-- Status Message -->
            <Frame BorderColor="{StaticResource Gray200}"
                   CornerRadius="10"
                   Padding="15"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <Label Text="{Binding StatusMessage}"
                       FontSize="14"
                       LineBreakMode="WordWrap" />
            </Frame>

            <!-- Upload Result -->
            <Frame BorderColor="{StaticResource Success}"
                   CornerRadius="10"
                   Padding="20"
                   IsVisible="{Binding UploadedFile, Converter={StaticResource IsNotNullConverter}}"
                   BackgroundColor="{StaticResource SuccessLight}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="âœ“ Upload Successful"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Success}" />
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                        <Label Grid.Row="0" Grid.Column="0" Text="File ID:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding UploadedFile.Id}" FontSize="12" />
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="File Name:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding UploadedFile.OriginalFileName}" />
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="File Size:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding UploadedFile.SizeBytes, StringFormat='{0:N0} bytes'}" />
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Status:" FontAttributes="Bold" />
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding UploadedFile.Status}" />
                    </Grid>

                    <Button Text="View Analysis Results"
                            Command="{Binding ViewAnalysisCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
