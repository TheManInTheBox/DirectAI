{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Environment": "Local",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=musicplatform;Username=postgres;Password=DevPassword123!"
  },
  "BlobStorage": {
    "ConnectionString": "UseDevelopmentStorage=true;DevelopmentStorageProxyUri=http://localhost:10000",
    "ContainerName": "audio-files",
    "UseManagedIdentity": false
  },
  "ServiceBus": {
    "Namespace": "",
    "ConnectionString": ""
  },
  "Workers": {
    "AnalysisWorkerUrl": "http://localhost:8001",
    "GenerationWorkerUrl": "http://localhost:8002"
  },
  "Orchestration": {
    "Type": "InMemory",
    "MaxConcurrentJobs": 10
  },
  "Autoscaling": {
    "Enabled": true,
    "MinWorkers": 1,
    "MaxWorkers": 5,
    "ScaleUpThreshold": 3,
    "ScaleDownThreshold": 1,
    "CooldownSeconds": 60
  }
