<Window
    x:Class="MusicPlatform.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="DirectAI Studio">

    <NavigationView x:Name="NavView"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    PaneDisplayMode="Left"
                    SelectionChanged="NavView_SelectionChanged">
        
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Dashboard" Tag="Dashboard" Icon="Home" IsSelected="True" />
            <NavigationViewItem Content="Audio Library" Tag="AudioLibrary" Icon="MusicInfo" />
            <NavigationViewItem Content="Generation" Tag="Generation" Icon="Play" />
            <NavigationViewItem Content="Jobs" Tag="Jobs" Icon="Clock" />
            <NavigationViewItem Content="Mixing" Tag="Mixing" Icon="Volume" />
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Window>
