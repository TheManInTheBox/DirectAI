<UserControl
    x:Class="MusicPlatform.WinUI.Controls.WaveformControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#2a2a2a"
    PointerPressed="OnPointerPressed"
    PointerMoved="OnPointerMoved"
    PointerReleased="OnPointerReleased">

    <Grid x:Name="RootGrid">
        <!-- Waveform Display -->
        <Viewbox Stretch="Fill" Margin="8">
            <Canvas x:Name="WaveformCanvas" Width="800" Height="80">
                <Path x:Name="WaveformPath" 
                      Fill="#7B1FA2" 
                      Opacity="0.7"/>
            </Canvas>
        </Viewbox>

        <!-- Selection Overlay -->
        <Canvas x:Name="SelectionCanvas" IsHitTestVisible="False">
            <!-- Selection Rectangle -->
            <Rectangle x:Name="SelectionRect"
                       Fill="#4CAF50"
                       Opacity="0.3"
                       Visibility="Collapsed"/>
            
            <!-- Selection Borders -->
            <Rectangle x:Name="SelectionLeftBorder"
                       Fill="#4CAF50"
                       Width="3"
                       Visibility="Collapsed"/>
            
            <Rectangle x:Name="SelectionRightBorder"
                       Fill="#4CAF50"
                       Width="3"
                       Visibility="Collapsed"/>
        </Canvas>

        <!-- Hover Line -->
        <Rectangle x:Name="HoverLine"
                   Fill="White"
                   Width="1"
                   Opacity="0.5"
                   Visibility="Collapsed"
                   IsHitTestVisible="False"/>
    </Grid>
</UserControl>
