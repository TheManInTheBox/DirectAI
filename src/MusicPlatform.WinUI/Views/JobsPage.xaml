<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MusicPlatform.WinUI.Views.JobsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel Padding="32">
        <TextBlock Text="Jobs" FontSize="32" FontWeight="Bold" Margin="0,0,0,24"/>
        
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,24">
            <Button Content="Refresh" Command="{Binding LoadJobsCommand}"/>
            <ProgressRing IsActive="{Binding IsLoading}" Width="24" Height="24"/>
        </StackPanel>
        
        <ItemsControl ItemsSource="{Binding Jobs}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           Padding="16" Margin="0,0,0,8" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="{Binding Type}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Status}" Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Page>
