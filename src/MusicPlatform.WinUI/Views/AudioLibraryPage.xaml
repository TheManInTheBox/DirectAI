<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MusicPlatform.WinUI.Views.AudioLibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="Audio Library" FontSize="32" FontWeight="Bold"/>
            <ProgressRing IsActive="{Binding IsLoading}" Width="24" Height="24"/>
            <Button Content="Refresh" Command="{Binding LoadAudioFilesCommand}"/>
            <Button Content="Upload" Click="OnUploadClick"/>
        </StackPanel>

        <ListView x:Name="AudioFilesList" Grid.Row="1" ItemsSource="{Binding AudioFiles}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{Binding OriginalFileName}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding UploadedAt}" Opacity="0.7"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Content="Delete"
                                Command="{Binding DataContext.DeleteAudioFileCommand, ElementName=AudioFilesList}"
                                CommandParameter="{Binding Id}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</Page>
