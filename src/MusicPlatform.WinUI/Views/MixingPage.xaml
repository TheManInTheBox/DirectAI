<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MusicPlatform.WinUI.Views.MixingPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MusicPlatform.WinUI.Converters"
    xmlns:controls="using:MusicPlatform.WinUI.Controls"
    mc:Ignorable="d"
    AllowDrop="True">

    <Page.Resources>
        <SolidColorBrush x:Key="TextPrimary" Color="White"/>
        <SolidColorBrush x:Key="TextSecondary" Color="Gray"/>
        <SolidColorBrush x:Key="AccentColor" Color="Purple"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2a2a2a"/>
        <SolidColorBrush x:Key="WaveformColor" Color="Green"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:StemTypeToIconConverter x:Key="StemTypeToIconConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Grid Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" Padding="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Studio Name -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                <FontIcon Glyph="&#xE8D6;" FontSize="24" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                <TextBlock Text="DirectAI Studio" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Center: Project Info -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <Button Background="#2a2a2a" Foreground="{StaticResource TextPrimary}" BorderThickness="0" Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE8E5;" FontSize="14"/>
                        <TextBlock Text="Create"/>
                    </StackPanel>
                </Button>
                <Button Background="#2a2a2a" Foreground="{StaticResource TextPrimary}" BorderThickness="0" Padding="12,6">
                    <TextBlock Text="Edit"/>
                </Button>
                <Button Background="#2a2a2a" Foreground="{StaticResource TextPrimary}" BorderThickness="0" Padding="12,6">
                    <TextBlock Text="Instrument"/>
                </Button>
            </StackPanel>

            <!-- Right: Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                <TextBlock Text="Layout" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                <Button Background="{StaticResource AccentColor}" Foreground="White" BorderThickness="0" Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE72D;" FontSize="14"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar: Audio Library -->
            <Grid Background="#0f0f0f" Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Library Tabs -->
                <StackPanel Background="#1a1a1a" Padding="16,12">
                    <Grid Margin="0,0,0,12">
                        <TextBlock Text="Audio Library" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                        <Button HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Padding="8,4" Command="{Binding LoadAudioFilesCommand}">
                            <FontIcon Glyph="&#xE895;" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                        </Button>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Background="{StaticResource AccentColor}" Foreground="White" BorderThickness="0" Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE8D6;" FontSize="12"/>
                                <TextBlock Text="Audio"/>
                            </StackPanel>
                        </Button>
                        <Button Background="Transparent" Foreground="{StaticResource TextSecondary}" BorderThickness="0" Padding="12,6">
                            <TextBlock Text="Persona"/>
                        </Button>
                        <Button Background="Transparent" Foreground="{StaticResource TextSecondary}" BorderThickness="0" Padding="12,6">
                            <TextBlock Text="Inspo"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Audio Items List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                    <ItemsControl ItemsSource="{Binding AvailableAudioFiles}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="8" 
                                        Background="{StaticResource CardBackground}" 
                                        CornerRadius="8" 
                                        Padding="12"
                                        CanDrag="True"
                                        DragStarting="AudioCard_DragStarting"
                                        PointerPressed="AudioCard_PointerPressed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Album Art / Icon -->
                                        <Border Background="{StaticResource AccentColor}" CornerRadius="6" Width="48" Height="48">
                                            <FontIcon Glyph="&#xE8D6;" FontSize="24" Foreground="White"/>
                                        </Border>

                                        <!-- Track Info -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding AudioFile.OriginalFileName}" 
                                                       Foreground="{StaticResource TextPrimary}" 
                                                       FontWeight="SemiBold" 
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                                <TextBlock Text="v4.5+" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                                <TextBlock Text="Stems" FontSize="11" Foreground="{StaticResource TextSecondary}" Visibility="{Binding HasStems}"/>
                                                <TextBlock Text="{Binding AudioFile.Duration}" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                            <Button Background="Transparent" BorderThickness="0" Padding="8" 
                                                    CanDrag="False"
                                                    Command="{Binding DataContext.AddAudioToMixCommand, ElementName=Root}" 
                                                    CommandParameter="{Binding AudioFile}">
                                                <FontIcon Glyph="&#xE710;" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                                            </Button>
                                            <Button Background="Transparent" BorderThickness="0" Padding="8"
                                                    CanDrag="False">
                                                <FontIcon Glyph="&#xE8E1;" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Right: Timeline and Waveform Area -->
            <Grid Grid.Column="1" 
                  Background="#1a1a1a"
                  x:Name="TimelineArea"
                  AllowDrop="True"
                  DragEnter="TracksArea_DragEnter"
                  DragOver="TracksArea_DragOver"
                  Drop="TracksArea_Drop">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Timeline Header -->
                <Border Background="#0f0f0f" Padding="16,12" BorderBrush="#2a2a2a" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="Got to See You Then" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            <Button Background="Transparent" BorderThickness="0" Padding="8,4">
                                <FontIcon Glyph="&#xE70D;" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                            </Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Background="Transparent" BorderThickness="0" Padding="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                            </Button>
                            <Button Background="Transparent" BorderThickness="0" Padding="8">
                                <FontIcon Glyph="&#xE712;" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                            </Button>
                            <TextBlock Text="+ ADD TRACK" Foreground="{StaticResource TextSecondary}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Timeline Content -->
                <ScrollViewer Grid.Row="1" 
                              x:Name="TimelineScrollViewer"
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              Background="#1a1a1a"
                              AllowDrop="True"
                              DragEnter="TracksArea_DragEnter"
                              DragOver="TracksArea_DragOver"
                              Drop="TracksArea_Drop">
                    <Border Background="#1a1a1a"
                            x:Name="TimelineDropZone"
                            CornerRadius="12"
                            Margin="16"
                            MinHeight="600"
                            MinWidth="1200"
                            AllowDrop="True"
                            DragEnter="TracksArea_DragEnter"
                            DragOver="TracksArea_DragOver"
                            DragLeave="TracksArea_DragLeave"
                            Drop="TracksArea_Drop">
                        <Grid Padding="16">
                        
                        <!-- Playback Cursor -->
                        <Line x:Name="PlaybackCursor"
                              X1="0" 
                              Y1="0" 
                              X2="0"
                              Y2="2000"
                              Stroke="#FF00FF"
                              StrokeThickness="3"
                              Opacity="0.9"
                              IsHitTestVisible="False"
                              Canvas.ZIndex="999"/>
                        
                        <!-- Empty State or Drop Zone -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding HasTracks, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    IsHitTestVisible="False">
                            <Border Background="{StaticResource CardBackground}" 
                                    CornerRadius="12" 
                                    Padding="48,32" 
                                    BorderBrush="{StaticResource AccentColor}" 
                                    BorderThickness="2">
                                <StackPanel Spacing="12">
                                    <FontIcon Glyph="&#xE8E5;" FontSize="48" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Drag to timeline to add to your project" 
                                               Foreground="{StaticResource TextSecondary}" 
                                               FontSize="14" 
                                               TextAlignment="Center"/>
                                    <TextBlock Text="Selection must be at most 90 seconds long" 
                                               Foreground="{StaticResource TextSecondary}" 
                                               FontSize="11" 
                                               Opacity="0.7"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Tracks Display -->
                        
                        <!-- New AudioTrackControl Test -->
                        <TextBlock Text="New AudioTrackControl (Test)" 
                                   Foreground="{StaticResource AccentColor}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Test with sample data -->
                        <controls:AudioTrackControl 
                            x:Name="TestTrack1"
                            TrackName="Test Track 1 - Vocals"
                            Volume="0.75"
                            Pan="0.0"
                            IsMuted="False"
                            IsSolo="False"
                            Margin="0,0,0,12"/>
                        
                        <controls:AudioTrackControl 
                            x:Name="TestTrack2"
                            TrackName="Test Track 2 - Drums"
                            Volume="0.60"
                            Pan="-0.3"
                            IsMuted="False"
                            IsSolo="False"
                            Margin="0,0,0,12"/>
                        
                        <controls:AudioTrackControl 
                            x:Name="TestTrack3"
                            TrackName="Test Track 3 - Bass"
                            Volume="0.80"
                            Pan="0.2"
                            IsMuted="False"
                            IsSolo="False"
                            Margin="0,0,0,24"/>
                        
                        <!-- Original Implementation -->
                        <TextBlock Text="Original Implementation" 
                                   Foreground="{StaticResource TextSecondary}" 
                                   FontSize="14" 
                                   Margin="0,0,0,12"
                                   Visibility="{Binding HasTracks}"/>
                        
                        <ItemsControl ItemsSource="{Binding Tracks}" Background="Transparent">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBackground}" 
                                            CornerRadius="8" 
                                            Margin="0,0,0,12" 
                                            Padding="16"
                                            Height="120">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Stem Icon -->
                                            <Border Grid.Column="0"
                                                    Background="{StaticResource AccentColor}"
                                                    CornerRadius="8"
                                                    Width="60"
                                                    Height="60"
                                                    Margin="0,0,16,0"
                                                    VerticalAlignment="Center">
                                                <FontIcon Glyph="{Binding StemType, Converter={StaticResource StemTypeToIconConverter}}" 
                                                          FontSize="28" 
                                                          Foreground="White"/>
                                            </Border>

                                            <!-- Track Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                                <TextBlock Text="{Binding Name}" 
                                                           Foreground="{StaticResource TextPrimary}" 
                                                           FontWeight="SemiBold" 
                                                           TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <TextBlock Text="Vol" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                                    <Slider Width="100" 
                                                            Minimum="0" 
                                                            Maximum="1" 
                                                            Value="{Binding Volume, Mode=TwoWay}"
                                                            Foreground="{StaticResource AccentColor}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <CheckBox Content="Mute" 
                                                              IsChecked="{Binding IsMuted, Mode=TwoWay}"
                                                              Foreground="{StaticResource TextSecondary}"
                                                              FontSize="11"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Waveform Display -->
                                            <Border Grid.Column="2" 
                                                    Background="#2a2a2a" 
                                                    CornerRadius="6" 
                                                    Margin="16,0">
                                                <controls:WaveformControl 
                                                    WaveformData="{Binding WaveformPath}"
                                                    SelectionStart="{Binding SelectionStart, Mode=TwoWay}"
                                                    SelectionEnd="{Binding SelectionEnd, Mode=TwoWay}"/>
                                            </Border>

                                            <!-- Track Actions -->
                                            <Button Grid.Column="3" 
                                                    Background="Transparent" 
                                                    BorderThickness="0" 
                                                    Padding="8"
                                                    Command="{Binding DataContext.RemoveTrackCommand, ElementName=Root}" 
                                                    CommandParameter="{Binding}"
                                                    VerticalAlignment="Top">
                                                <FontIcon Glyph="&#xE711;" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Bottom Transport Controls -->
        <Grid Grid.Row="2" Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="0,1,0,0" Padding="16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Time Display -->
            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                <TextBlock Text="{Binding CurrentTime}" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" FontFamily="Consolas"/>
                <TextBlock Text="/" FontSize="20" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Duration}" FontSize="16" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" FontFamily="Consolas"/>
            </StackPanel>

            <!-- Center: Transport Controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <Button Background="Transparent" BorderThickness="0" Padding="12" Width="48" Height="48">
                    <FontIcon Glyph="&#xE892;" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                </Button>
                <Button Background="{StaticResource AccentColor}" 
                        BorderThickness="0" 
                        Padding="16" 
                        Width="56" 
                        Height="56"
                        CornerRadius="28"
                        Command="{Binding PlayCommand}">
                    <FontIcon FontSize="20" Foreground="White">
                        <FontIcon.Glyph>
                            <Binding Path="IsPlaying" Mode="OneWay">
                                <Binding.Converter>
                                    <converters:BoolToPlayPauseIconConverter/>
                                </Binding.Converter>
                            </Binding>
                        </FontIcon.Glyph>
                    </FontIcon>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Padding="12" Width="48" Height="48">
                    <FontIcon Glyph="&#xE893;" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Padding="12" Width="48" Height="48" Command="{Binding StopCommand}">
                    <FontIcon Glyph="&#xE71A;" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                </Button>
            </StackPanel>

            <!-- Right: Additional Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" VerticalAlignment="Center">
                <Button Background="Transparent" BorderThickness="0" Padding="8">
                    <FontIcon Glyph="&#xE767;" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Padding="8">
                    <FontIcon Glyph="&#xE710;" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                </Button>
                <TextBlock Text="00:06.620" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimary}" 
                           VerticalAlignment="Center"
                           FontFamily="Consolas"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
